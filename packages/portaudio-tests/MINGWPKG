#!/bin/bash

function define_package_env
{
	PKG_NAME='portaudio-tests'
	PKG_VERSION="2.0"
	PKG_DEPS="gcc portaudio"
	PKG_INSTALL_DIR="$PKG_NAME-${PKG_VERSION}-$ARCH"
}

function prep
{
	echo "$PKG_NAME prep"
}

function build
{
	echo "$PKG_NAME build"
}

function install
{
	echo "$PKG_NAME install"
	PKG_BIN_DIR=$PKG_INSTALL_DIR/bin
	TESTS=`ls "$MINGW_ROOT"/bin/patest*.exe`
	for test in $TESTS;
	do
		cp "$test" $PKG_BIN_DIR || exit 1
	done
}

function package
{
	echo "$PKG_NAME package"
}
