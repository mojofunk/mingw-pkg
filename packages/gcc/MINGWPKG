#!/bin/bash

COMMON_DLLS='
libstdc++-6.dll
'

FEDORA_WIN32_DLLS='
libgcc_s_sjlj-1.dll
'

FEDORA_WIN64_DLLS='
libgcc_s_seh-1.dll
'

MSYS2_DLLS='
libgcc_s_dw2-1.dll
'

function define_package_env
{
	PKG_NAME='gcc'
	PKG_DEPS='pthread'
	PKG_VERSION="1"
	PKG_INSTALL_DIR="$PKG_NAME-$ARCH"
}

function prep
{
	echo "$PKG_NAME prep"
}

function build
{
	echo "$PKG_NAME build"
}

function install
{
	echo "$PKG_NAME install"

	if [ $BUILD_HOST == 'MSYS2' ]; then
		DLLS=$MSYS2_DLLS
	else
		if [ "$ARCH" == "x86_64" ]; then
			DLLS=$FEDORA_WIN64_DLLS
		else
			DLLS=$FEDORA_WIN32_DLLS
		fi
	fi

	if [ -z "$DLLS" ]; then
		echo "ERROR: DLLS variable is not defined..."
		exit 1
	fi

	DLLS=$COMMON_DLLS$DLLS

	mkdir -p $PKG_BIN_DIR || exit 1

	echo "Copying $PKG_NAME shared libraries to $PKG_BIN_DIR ..."

	for i in $DLLS;
	do
		copydll "$i" $PKG_BIN_DIR || exit 1
	done
}

function package
{
	echo "$PKG_NAME package"
}
