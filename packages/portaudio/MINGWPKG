#!/bin/bash

function define_package_env
{
	PKG_NAME='portaudio'
	PKG_VERSION="2.0"
	PKG_DEPS="gcc"
	PKG_INSTALL_DIR="$PKG_NAME-${PKG_VERSION}-$ARCH"
}

function prep
{
	echo "$PKG_NAME prep"
}

function build
{
	echo "$PKG_NAME build"
}

function install
{
	echo "$PKG_NAME install"
	if [ $BUILD_HOST == 'MSYS2' ]; then
		DLL="libportaudio-2.dll"
	else
		DLL="portaudio-2.dll"
	fi
	mkdir -p $PKG_BIN_DIR || exit 1
	copydll $DLL $PKG_BIN_DIR
}

function package
{
	echo "$PKG_NAME package"
}
